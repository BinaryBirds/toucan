<figure>
    <picture>
        {{#figure.darkSrc}}
        <source
            srcset="{{.}}"
            media="(prefers-color-scheme: dark)"
        >
        {{/figure.darkSrc}}
        <img class="author"
            src="{{figure.src}}"
            alt="{{figure.alt}}"
            title="{{figure.title}}"
        >
    </picture>
</figure>