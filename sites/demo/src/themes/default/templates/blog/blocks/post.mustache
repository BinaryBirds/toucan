<div class="post card">
    <a href="{{permalink}}" target="">
        {{#imageUrl}}<img src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}

        <section>
            <time datetime="{{date}}">{{date}}</time>
            <h2 class="title">{{title}}</h2>
        </section>
        <p>{{description}}</p>
    </a>
    <div class="author-list">
    {{#authors}}
        {{#imageUrl}}<img class="small rounded" src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
    {{/authors}}
    </div>
    <div class="tag-list">
    {{#tags}}
        <small>{{title}}{{^last()}}, {{/last()}}</small>
    {{/tags}}
    </div>
</div>
