{{<index}}
{{$main}}

<article class="post">

    {{#page.context.post}}
    <header>
        {{#imageUrl}}<img src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
        <br><br>
        <time datetime="{{date}}">{{date}}</time>
        <h1>{{title}}</h1>
        <hr>
        <iframe
            src="https://embed.podcasts.apple.com/us/podcast/{{userDefined.apple.podcastId}}?i={{userDefined.apple.episodeId}}&amp;itsct=podcast_box&amp;itscg=30200"
            height="175px"
            frameborder="0"
            sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation-by-user-activation"
            allow="autoplay *; encrypted-media *;"
            style="width: 100%; max-width: 660px; overflow: hidden; border-radius: 10px; background: transparent;"
        ></iframe>
    
        <p class="excerpt">{{description}}</p>
        
        <div class="author-list">
        {{#authors}}
            <a href="{{permalink}}">
            {{#imageUrl}}<img class="small rounded" src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
            </a>
        {{/authors}}
        </div>
        <div class="tag-list">
        {{#tags}}
            <a href="{{permalink}}"><small>{{title}}</small></a>{{^last()}}<small>, </small>{{/last()}}
        {{/tags}}
        </div>
    </header>
    {{/page.context.post}}

    
{{userDefined.downloadUrl}}{{userDefined.downloadFile}}
    <audio src="{{ site.podcast.link }}{{ page.file }}" controls="">
    <a href="{{ site.podcast.link }}{{ page.file }}">Download episode Â»</a>
    </audio>



    <section>
    
    {{& page.content}}
        
    </section>
    
    <section>
    <div class="grid grid-221">
    {{^page.context.prev}}
    <div></div>
    {{/page.context.prev}}
    {{#page.context.prev}}
    <div>
        <a href="{{permalink}}">
        <h4>&larr; Prev post</h4>
        <hr class="spacer">
        </a>
    </div>
    {{/page.context.prev}}
    
    {{^page.context.next}}
    <div></div>
    {{/page.context.next}}
    {{#page.context.next}}
    <div>
        <a href="{{permalink}}">
        <h4 style="text-align: right;">Next post &rarr;</h4>
        </a>
    </div>
    {{/page.context.next}}
    </div>
    </section>
    
    

</article>

<div class="fixed-toc">
{{> blocks.toc }}
</div>

{{/main}}
{{/index}}
