{{<html}}
{{$main}}

{{#page.post}}
<article>
    <header>
        <section id="post-header" class="content-wrapper">
            <time datetime="{{date}}">{{date}}</time>
            <h1 class="title">{{title}}</h1>
            <p class="excerpt">{{description}}</p>
            {{#empty(tags)}}
            {{/empty(tags)}}
            {{^empty(tags)}}
            <div class="meta">
            {{#tags}}
                {{> blog.blocks.tag}}
            {{/tags}}
            </div>
            {{/empty(tags)}}
        </section>
        
        {{#figure}}
        {{#imageUrl}}<img src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
        {{/figure}}
    </header>

    <section id="contents" class="content-wrapper">
    
    {{& page.contents}}
        
    </section>
    
    <h2>Next</h2>
    {{#page.next}}
        {{> blog.blocks.post}}
    {{/page.next}}
    
    <h2>Prev</h2>
    {{#page.prev}}
        {{> blog.blocks.post}}
    {{/page.prev}}
    
    <h2>Related</h2>
    {{#empty(page.related)}}
    Empty.
    {{/empty(page.related)}}
    {{^empty(page.related)}}
    {{#page.related}}
        {{> blog.blocks.post}}
    {{/page.related}}
    {{/empty(page.related)}}
    
    <h2>More by author(s)</h2>
    {{#empty(page.moreByAuthor)}}
    Empty.
    {{/empty(page.moreByAuthor)}}
    {{^empty(page.moreByAuthor)}}
    {{#page.moreByAuthor}}
        {{> blog.blocks.post}}
    {{/page.moreByAuthor}}
    {{/empty(page.moreByAuthor)}}

</article>
{{/page.post}}

{{/main}}
{{/html}}
