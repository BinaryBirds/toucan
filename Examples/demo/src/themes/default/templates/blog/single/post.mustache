{{<html}}
{{$main}}

<article class="post">
    {{#context.post}}
    <header>
        {{#imageUrl}}<img src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
        <br><br>
        <time datetime="{{date}}">{{date}}</time>
        <h1>{{title}}</h1>
        <hr>
        <p class="excerpt">{{description}}</p>
        
        <div class="author-list">
        {{#authors}}
            <a href="{{permalink}}">
            {{#imageUrl}}<img class="small rounded" src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
            </a>
        {{/authors}}
        </div>
        <div class="tag-list">
        {{#tags}}
            <a href="{{permalink}}"><small>{{title}}</small></a>{{^last()}}<small>, </small>{{/last()}}
        {{/tags}}
        </div>
    </header>
    {{/context.post}}

    <section>
    
    {{& content}}
        
    </section>
    
    <section>
    <div class="grid grid-221">
    {{^context.prev}}
    <div></div>
    {{/context.prev}}
    {{#context.prev}}
    <div>
        <h4>&larr; Prev post</h4>
        <hr class="spacer">
        {{> blog.blocks.post}}
    </div>
    {{/context.prev}}
    
    {{^context.next}}
    <div></div>
    {{/context.next}}
    {{#context.next}}
    <div>
        <h4 style="text-align: right;">Next post &rarr;</h4>
        <hr class="spacer">
        {{> blog.blocks.post}}
    </div>
    {{/context.next}}
    </div>
    </section>
    
    <section>
    {{#empty(context.related)}}
    {{/empty(context.related)}}
    {{^empty(context.related)}}
    <h4>Related posts</h4>
    <hr class="spacer">
    <div class="grid grid-221">
    {{#context.related}}
        {{> blog.blocks.post}}
    {{/context.related}}
    </div>
    {{/empty(context.related)}}
    </section>
    
    
    {{#empty(context.moreByAuthor)}}
    {{/empty(context.moreByAuthor)}}
    {{^empty(context.moreByAuthor)}}
    <h4>More posts by the author(s)</h4>
    <hr class="spacer">
    <div class="grid grid-221">
    {{#context.moreByAuthor}}
        {{> blog.blocks.post}}
    {{/context.moreByAuthor}}
    </div>
    {{/empty(context.moreByAuthor)}}

</article>

<div class="fixed-toc">
{{> blocks.toc }}
</div>

{{/main}}
{{/html}}
