    {{#empty(page.context.posts)}}
    Empty.
    {{/empty(page.context.posts)}}
    {{^empty(page.context.posts)}}
    <div class="grid">
    {{#page.context.posts}}
        {{> _partials.post}}
    {{/page.context.posts}}
    </div>
    {{/empty(page.context.posts)}}
    
</div>

