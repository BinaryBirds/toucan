<!DOCTYPE html>
<html {{#site.language}}lang="{{.}}"{{/site.language}}>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>{{metadata.title}} - {{site.title}}</title>
    <meta name="description" content="{{metadata.description}}">
    
    <meta property="og:url" content="{{metadata.permalink}}">
    <meta property="og:title" content="{{metadata.title}} - {{site.title}}">
    <meta property="og:description" content="{{metadata.description}}">
    {{#metadata.imageUrl}}
    <meta property="og:image" content="{{.}}" />
    {{/metadata.imageUrl}}

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{metadata.title}} - {{site.title}}">
    <meta name="twitter:description" content="{{metadata.description}}">
    {{#metadata.imageUrl}}
    <meta name="twitter:image" content="{{.}}">
    {{/metadata.imageUrl}}
    
    <link rel="stylesheet" href="{{site.baseUrl}}css/style.css">
    <link rel="stylesheet" href="{{site.baseUrl}}css/syntax.css">

    <link rel="shortcut icon" href="{{site.baseUrl}}images/icons/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="{{site.baseUrl}}images/icons/icon-320.png" type="image/png">
    
    <link rel="apple-touch-icon" href="{{site.baseUrl}}images/icons/apple-touch-icon.png">
